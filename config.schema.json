{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Leaderboard Configuration",
  "description": "Configuration schema for the leaderboard application",
  "type": "object",
  "required": ["org", "meta", "leaderboard"],
  "properties": {
    "org": {
      "type": "object",
      "description": "Organization information",
      "required": ["name", "description", "url", "logo_url"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Organization name"
        },
        "description": {
          "type": "string",
          "description": "Organization description"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Organization website URL"
        },
        "logo_url": {
          "type": "string",
          "format": "uri",
          "description": "Organization logo URL"
        },
        "start_date": {
          "type": "string",
          "format": "date",
          "description": "Organization start date (YYYY-MM-DD)"
        },
        "socials": {
          "type": "object",
          "description": "Social media links",
          "properties": {
            "github": {
              "type": "string",
              "format": "uri",
              "description": "GitHub organization URL"
            },
            "slack": {
              "type": "string",
              "format": "uri",
              "description": "Slack workspace URL"
            },
            "linkedin": {
              "type": "string",
              "format": "uri",
              "description": "LinkedIn company URL"
            },
            "youtube": {
              "type": "string",
              "format": "uri",
              "description": "YouTube channel URL"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "Contact email address"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "description": "Site and SEO metadata",
      "required": [
        "title",
        "description",
        "image_url",
        "site_url",
        "favicon_url"
      ],
      "properties": {
        "title": {
          "type": "string",
          "description": "Site title"
        },
        "description": {
          "type": "string",
          "description": "Site description for SEO"
        },
        "image_url": {
          "type": "string",
          "format": "uri",
          "description": "Open Graph image URL"
        },
        "site_url": {
          "type": "string",
          "format": "uri",
          "description": "Site URL"
        },
        "favicon_url": {
          "type": "string",
          "format": "uri",
          "description": "Favicon URL"
        }
      },
      "additionalProperties": false
    },
    "leaderboard": {
      "type": "object",
      "description": "Leaderboard related configurations",
      "required": ["data_source", "roles"],
      "properties": {
        "data_source": {
          "type": "string",
          "format": "uri",
          "description": "URL to the leaderboard data repository"
        },
        "roles": {
          "type": "object",
          "description": "User roles configuration",
          "minProperties": 1,
          "patternProperties": {
            "^[a-z_]+$": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Display name for the role"
                },
                "description": {
                  "type": "string",
                  "description": "Role description"
                },
                "hidden": {
                  "type": "boolean",
                  "description": "Whether this role should be hidden by default in leaderboard and excluded from people page (default: false)",
                  "default": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "top_contributors": {
          "type": "array",
          "description": "List of activity definition slugs to show in the top contributors sidebar (optional - if not specified, all activity types are shown)",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "social_profiles": {
          "type": "object",
          "description": "Social profile icon mappings",
          "patternProperties": {
            "^[a-z_]+$": {
              "type": "object",
              "required": ["icon"],
              "properties": {
                "icon": {
                  "type": "string",
                  "description": "Lucide icon name for this social profile"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "theme": {
          "type": "string",
          "format": "uri",
          "description": "Optional URL to a custom theme CSS file"
        },
        "aggregates": {
          "type": "object",
          "description": "Aggregates to display on pages",
          "properties": {
            "global": {
              "type": "array",
              "description": "Global aggregates to show on home page (built-in: total_activities, count_contributors, activity_types)",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "contributor": {
              "type": "array",
              "description": "Contributor aggregates to show on profile page (built-in: total_points, total_activities, activity_types)",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "scraper": {
      "type": "object",
      "description": "Scraper configuration for GitHub Actions workflow generation",
      "required": ["schedule", "scrapers"],
      "properties": {
        "schedule": {
          "type": "string",
          "description": "Cron expression for scheduled execution",
          "pattern": "^(@(annually|yearly|monthly|weekly|daily|hourly|reboot))|(@every (\\d+(ns|us|Âµs|ms|s|m|h))+)|((((\\d+,)+\\d+|(\\d+([/\\-])\\d+)|\\d+|\\*) ?){5,7})$"
        },
        "scrapers": {
          "type": "array",
          "description": "List of scrapers to run",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "repository", "envs"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for the scraper"
              },
              "repository": {
                "type": "string",
                "description": "GitHub repository in format 'owner/repo'",
                "pattern": "^[a-zA-Z0-9_.-]+/[a-zA-Z0-9_.-]+$"
              },
              "envs": {
                "type": "object",
                "description": "Environment variables for the scraper (supports GitHub Actions expressions like ${{ secrets.TOKEN }})",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
